echo "___ Revision Medica de Sistema ___"

# 1. Comprobar si existe una carpeta de LOGS, si no,crearla
if [ -d "mis_logs" ]; then 
   echo "[OK] La carpeta  de logs ya existe."
else
   echo "[!] La Carpeta cd logs no existe. Creandola ahora..."

fi

# 2. Ver el espacio en el disco duro ( solo la particion principal)
echo "--- ESPACIO EN DISCO ---"

df df -h / | grep /

#.3 Crear un archivo de log con nombre unico usando la fecha y hora 
# Esto es muy importante en servidores reales 
ARCHIVO_LOG="mis_logs/reporte_$(date +%H-%M-%S).log"

echo "Genarando reporte en : $ARCHIVO_LOG"
echo "Reporte de salud del sistema"" > $ARCHIVO_LOG
echo " Usuario: $(whoami)" >> $ARCHIVO_LOG
uptame >> $ARCHIVO_LOG

